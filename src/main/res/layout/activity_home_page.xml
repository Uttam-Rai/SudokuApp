<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:weightSum="9"
    android:background="#cbcad8"
    android:layout_height="match_parent"
   tools:context="com.example.sudoku.HomePageActivity">

    <ImageView
        android:src="@drawable/splash"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        ></ImageView>

    <Button
        android:id="@+id/btContinueGame"
        android:text="Continue Game"
        android:textSize="15dp"
        android:background="@drawable/home_button"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="60dp"
        android:textColor="#F4F8F4"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></Button>

    <Button
        android:id="@+id/btNewGame"
        android:text="New Game"
        android:textSize="15dp"
        android:background="@drawable/home_button"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:textColor="#F4F8F4"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></Button>

    <Button
        android:id="@+id/btBackTracking"
        android:text="Back Tracking"
        android:textSize="15dp"
        android:background="@drawable/home_button"
        android:textColor="#F4F8F4"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="120dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></Button>

</LinearLayout>