<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:weightSum="1"
    android:paddingTop="180dp"
    android:background="#F4F8F4"
    android:paddingBottom="180dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sudoku.VictoryPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/score_board"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:background="@drawable/score_box"
                android:weightSum="3"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:text="Score"
                    style="@style/victory_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    ></TextView>

                <TextView
                    android:id="@+id/tvScore"
                    android:text="0"
                    style="@style/value_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/score_box"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:text="Difficulty"
                    style="@style/victory_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    ></TextView>

                <TextView
                    android:id="@+id/tvDifficulty"
                    android:text="Medium"
                    style="@style/value_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    ></TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="90dp"
                android:background="@drawable/score_box"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:text="Time"
                    style="@style/victory_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    ></TextView>

                <TextView
                    android:id="@+id/tvTime"
                    android:text="0"
                    style="@style/value_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="90dp"

                android:background="@drawable/score_box"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:text="Best Time"
                    style="@style/victory_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    ></TextView>

                <TextView
                    android:id="@+id/tvBestTime"
                    android:text="Medium"
                    style="@style/value_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    ></TextView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>