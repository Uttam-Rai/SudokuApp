<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="cell_text">
        <item name="android:textColor">#6E6584</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="level_text">
        <item name="android:textColor">#7E7497</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="score_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#7E7497</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="num_button_text">
        <item name="android:textColor">#F4F8F4</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="count_text">
        <item name="android:textColor">#F4F8F4</item>
        <item name="android:alpha">0.6</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="victory_text">
        <item name="android:padding">1dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="value_text">
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#F4F8F4</item>
